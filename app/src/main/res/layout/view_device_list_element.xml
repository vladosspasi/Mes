<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="Название:"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView_DeviceListElementView_name"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"/>
    <TextView
            android:text="Тип:"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView_DeviceListElementView_type"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_DeviceListElementView_name" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Комментарий:"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView_DeviceListElementView_comment"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_DeviceListElementView_type" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
            android:layout_marginBottom="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>